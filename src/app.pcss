@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  html {
    font-family: "Roboto-Regular", Helvetica;
  }
}

.input-line {
  width: 100%;
  padding-inline-start: 0;
  border: none;
  border-bottom: 1px solid black;
  outline: none;
}
.input-line:focus {
  --tw-ring-shadow: 0;
}